<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <size android:height="42dp" android:width="112dp"></size>
            <padding android:bottom="5dp" android:left="5dp"
     				 android:right="5dp" android:top="5dp">
            </padding>
            <!-- full color filled
            	<solid android:color="#d35400"></solid>
             -->
            <gradient android:startColor="@color/translucence_light_acidblue" 
                	  android:endColor="@color/translucence_dark_acidblue"
                      android:angle="0" android:type="linear"></gradient>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <size android:height="42dp" android:width="112dp"></size>
            <padding android:bottom="5dp" android:left="5dp"
             		 android:right="5dp" android:top="5dp"></padding>
            <!-- full color filled
            	<solid android:color="#88f39c12"></solid>
             -->
            <gradient android:startColor="@color/translucence_white" 
                	  android:endColor="@color/translucence_acidblue"
                      android:angle="0" android:type="linear"></gradient>
        </shape>
    </item>
</selector>
